<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="40dp"     >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Số thứ nhất"
            android:textSize="18dp"
            android:textColor="@color/cardview_dark_background"/>


        <EditText
           android:id="@+id/edtSo1"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:hint="Mời nhập số " />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="40dp"     >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Số thứ hai"
            android:textSize="18dp"
            android:textColor="@color/cardview_dark_background"/>


        <EditText
            android:id="@+id/edtSo2"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:hint="Mời nhập số " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btnCong"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:onClick="XuLyCong"
            />
        <Button
            android:id="@+id/btnTru"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:onClick="XuLyTru"/>
        <Button
            android:id="@+id/btnNhan"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:onClick="XuLiNhan"/>
        <Button
            android:id="@+id/btnChia"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:onClick="XuLyChia"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="40dp"     >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="kết quả"
            android:textSize="18dp"
            android:textColor="@color/cardview_dark_background"/>


        <EditText
    android:id="@+id/edtKetQua"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:hint="Nơi hiện kết quả "
            android:enabled="false" />
<!--            nó là nơi hiện kết quả không cho nhập-->



    </LinearLayout>
</LinearLayout>