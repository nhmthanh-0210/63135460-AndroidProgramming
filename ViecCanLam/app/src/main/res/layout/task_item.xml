<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#8C4444"
    android:backgroundTint="#9F5C5C">

    <TextView
        android:id="@+id/textViewTenVCL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:gravity="left|center"
        android:textColor="#BBEAA047"
        android:textSize="21dp"
        android:text="Tên Việc Cần làm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="296dp"
        android:layout_marginTop="12dp"
        android:text="Deadline in here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTenVCL" />
</androidx.constraintlayout.widget.ConstraintLayout>